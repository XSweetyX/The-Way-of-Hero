<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:text="@string/menu"
    tools:context=".MenuClasses.SplashActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundmenu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/about"
            style="@style/MenuFont"
            android:layout_width="173dp"
            android:layout_height="100dp"
            android:fontFamily="@font/f1"
            android:textAlignment="center"
            android:textColor="#2D63CF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.948"
            android:text="Supported by Samsung" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="87dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:backgroundTint="#E3DC9F"
            android:fontFamily="@font/f1"
            android:text="Stop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.79" />

        <TextView
            android:id="@+id/exit"
            style="@style/MenuFont"
            android:layout_width="280dp"
            android:layout_height="121dp"

            android:background="@drawable/button"
            android:fontFamily="@font/f1"
            android:text="   QUIT        "
            android:textColor="#353434"
            android:textSize="34sp"
            android:textStyle=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.997"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.682" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="86dp"
            android:layout_height="73dp"
            android:layout_gravity="right"
            android:backgroundTint="#E8E1A1"
            android:fontFamily="@font/f1"
            android:text="Play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/settings"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/settings"
            style="@style/MenuFont"
            android:layout_width="282dp"
            android:layout_height="127dp"

            android:background="@drawable/button"
            android:fontFamily="@font/f1"
            android:text=" SETTINGS    "
            android:textColor="#353434"
            android:textSize="34sp"
            android:textStyle=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.341" />

        <TextView
            android:id="@+id/start"
            style="@style/MenuFont"
            android:layout_width="279dp"
            android:layout_height="123dp"

            android:autoSizeTextType="none"

            android:background="@drawable/button"
            android:fontFamily="@font/f1"
            android:text="   STARTGAME  "
            android:textColor="#353434"
            android:textSize="34sp"
            android:textStyle=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>